<Window x:Class="WeatherClient.Views.MainWindow"
        xmlns:utils="clr-namespace:WeatherHubClient.Utils"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather Forecast System"
        Height="900" Width="1200" 
        MinHeight="600" MinWidth="800"
        Background="#FAFBFC"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        WindowState="Normal">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <utils:ConditionToBrushConverter x:Key="ConditionToBrushConverter"/>
        <utils:ConditionToEmojiConverter x:Key="ConditionToEmojiConverter"/>

        <!-- Search Button -->
        <Style x:Key="SearchButton" TargetType="Button">
            <Setter Property="Background" Value="#4B5563"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search TextBox -->
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush"  Value="#4B5563"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="#605E5C" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background"  Value="#605E5C" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E1E1E1"/>
        </Style>

        <!-- List Item -->
        <Style x:Key="ListItem" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F2F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#E1E1E1" Padding="24,16">
            <!-- Grid עוטף אחד - הילד היחיד של ה-Border -->
            <Grid>
                <!-- תוכן ה-Header -->
                <Grid MaxWidth="1000" HorizontalAlignment="Center">
                    <TextBlock Text="Weather Forecast System"
                       FontSize="20" FontWeight="SemiBold"
                       Foreground="#323130"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"/>
                </Grid>

                <!-- Loading bar דינמי למטה בתוך ה-Header -->
                <Grid Height="4" VerticalAlignment="Bottom" Margin="0,0,-25,-20"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <!-- רקע פס סטטי -->
                    <Rectangle Fill="#E0E0E0" HorizontalAlignment="Stretch"/>

                    <!-- פס כחול זז -->
                    <Rectangle Fill="#4B5563" Width="300" HorizontalAlignment="Left">
                        <Rectangle.RenderTransform>
                            <TranslateTransform x:Name="LoadingTransform" />
                        </Rectangle.RenderTransform>
                        <Rectangle.Triggers>
                            <EventTrigger RoutedEvent="Rectangle.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                    Storyboard.TargetProperty="(Rectangle.RenderTransform).X"
                                    From="-200"
                                    To="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                    Duration="0:0:1.5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Rectangle.Triggers>
                    </Rectangle>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid MaxWidth="1000" HorizontalAlignment="Center" Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <!-- WEATHER FORECAST (Left - Main Area) -->
                <Border Grid.Column="0" Style="{StaticResource Card}" Padding="20"  MaxHeight="1000"   VerticalAlignment="Top">
                    <StackPanel>
                        
                        <!-- Current Weather -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentWeatherData.CityName}" 
                                          FontSize="24" FontWeight="SemiBold" 
                                          Foreground="#323130"/>
                                <TextBlock Text="{Binding RetrievedAtLocal}" 
                                          FontSize="11" 
                                          Foreground="#605E5C" 
                                          Margin="0,3,0,6"/>
                                <TextBlock Text="{Binding CurrentHourlyForecast.Condition}" 
                                          FontSize="13" 
                                          Foreground="#605E5C"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentHourlyForecast.Temperature, StringFormat='{}{0}°C'}"
                                          FontSize="48" FontWeight="SemiBold" 
                                          Foreground="#323130" 
                                          Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding CurrentHourlyForecast.Condition, Converter={StaticResource ConditionToEmojiConverter}}"
                                          FontSize="48"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Temperature Chart -->
                        <Border Background="#F3F3F3" 
        CornerRadius="4" 
        BorderBrush="#E1E1E1"
        BorderThickness="1"
        Padding="16"
        Margin="0,0,0,20">
                            <Grid Height="120">
                                <Polygon Points="{Binding PolygonPoints}" 
                 Fill="#40FF9800" 
                 StrokeThickness="0"/>
                                <Polyline Points="{Binding PolylinePoints}" 
                  Stroke="#FF9800" 
                  StrokeThickness="2.5"/>
                                <Canvas x:Name="LabelsCanvas" IsHitTestVisible="False"/>
                            </Grid>
                        </Border>


                        <!-- Daily Forecast -->
                        <ItemsControl ItemsSource="{Binding CurrentWeatherData.DailyForecasts}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding CurrentWeatherData.DailyForecasts.Count}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F3F2F1" 
                    CornerRadius="4" 
                    Padding="8" 
                    Margin="0,0,6,6">
                                        <StackPanel>
                                            <!-- יום -->
                                            <TextBlock Text="{Binding Date, StringFormat='{}{0:ddd}'}"
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#323130"
                               HorizontalAlignment="Center"/>

                                            <!-- שעה -->
                                            <TextBlock Text="{Binding DateTime, StringFormat='{}{0:HH:mm}'}"
                               FontSize="12" 
                               Foreground="#605E5C"
                               HorizontalAlignment="Center" 
                               Margin="0,1,0,6"/>

                                            <!-- אימוג'י מזג האוויר -->
                                            <TextBlock Text="{Binding Condition, Converter={StaticResource ConditionToEmojiConverter}}"
                               FontSize="32"
                               FontFamily="Segoe UI Emoji"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,6"/>

                                            <!-- טמפרטורות -->
                                            <Grid HorizontalAlignment="Center" Margin="0,0,0,6">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding TempMin, StringFormat='{}{0}°'}"
                                   FontSize="12"
                                   Foreground="#605E5C"
                                   Grid.Column="0"
                                   Margin="0,0,6,0"
                                   HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding TempMax, StringFormat='{}{0}°'}"
                                   FontSize="12"
                                   Foreground="#323130"
                                   FontWeight="SemiBold"
                                   Grid.Column="1"
                                   HorizontalAlignment="Left"/>
                                            </Grid>

                                            <!-- תנאי מזג האוויר -->
                                            <TextBlock Text="{Binding Condition}" 
                               FontSize="10"
                               Foreground="#605E5C" 
                               HorizontalAlignment="Center" 
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               MaxHeight="30"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </Border>

                <!-- SIDEBAR: SEARCH & LISTS (Right) -->
                <StackPanel Grid.Column="2">
                    <StackPanel Grid.Column="2">
                        <!-- Search + Recent Searches בתוך Card אחד -->
                        <Border Style="{StaticResource Card}" Padding="16" Margin="0,0,0,16">
                            <StackPanel>

                                <!-- Search Box -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBox x:Name="cityTextBox"
                         Style="{StaticResource SearchTextBox}"
                         Height="40"
                         Width="230"
                         Text="Search city..."
                         GotFocus="cityTextBox_GotFocus"
                        
                         TextChanged="cityTextBox_TextChanged"/>
                                    <Button x:Name="myButton"
                        Style="{StaticResource IconButton}"
                        Content="🔍"
                        Margin="8,0,0,0"
                        Click="SearchButton_Click"/>
                                </StackPanel>

                                <!-- Recent Searches -->
    

                                <ListBox ItemsSource="{Binding RecentCities}"
                     Background="Transparent" 
                     BorderThickness="0" 
                     MaxHeight="250">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource ListItem}"
                                MouseLeftButtonDown="CityCard_Click">
                                                <DockPanel>
                                                    <Button DockPanel.Dock="Left"
                                        Content="★"
                                        Width="20" Height="20"
                                        FontSize="14"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#FBBC04"
                                        Cursor="Hand"
                                        Margin="0,0,8,0"
                                        Click="StarButton_Click"/>
                                                    <TextBlock Text="{Binding Name}" 
                                           FontSize="13" 
                                           Foreground="#323130"
                                           VerticalAlignment="Center"/>
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>


                    <!-- Favorites -->
                    <Border Style="{StaticResource Card}" Padding="16">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Foreground="#323130" Margin="0,0,0,12">
    <Run Text="📌" FontSize="10"/>  <!-- נעץ קטן -->
    <Run Text=" Favorites" FontSize="14"/>
                            </TextBlock>

                            <ListBox ItemsSource="{Binding FavoriteCities}"
         Background="Transparent" 
         BorderThickness="0" 
         MaxHeight="350">
                                <ListBox.Style>
                                    <Style TargetType="ListBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBox">
                                                    <Grid>
                                                        <ItemsPresenter />
                                                        <!-- הודעה כאשר אין פריטים -->
                                                        <TextBlock Text="No favorite cities yet."
                                       Foreground="#A0A0A0"
                                       FontStyle="Italic"
                                       FontSize="13"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"
                                       x:Name="EmptyText"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="HasItems" Value="False">
                                                            <Setter TargetName="EmptyText" Property="Visibility" Value="Visible"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.Style>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ListItem}" 
                    MouseLeftButtonDown="FavoriteItem_Click">
                                            <DockPanel>
                                                <Button DockPanel.Dock="Left"
                            Content="×"
                            Width="20" Height="20"
                            FontSize="16"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#A4262C"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="0,0,8,0"
                            Click="RemoveFavorite_Click"/>
                                                <TextBlock Text="{Binding Name}" 
                               FontSize="13" 
                               Foreground="#323130"
                               VerticalAlignment="Center"/>
                                            </DockPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                        </StackPanel>
                    </Border>
                </StackPanel>

            </Grid>
        </ScrollViewer>
    </Grid>
</Window>